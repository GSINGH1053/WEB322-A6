<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Update Department</h2>
            <form method="post" action="/departments/update">
                <fieldset>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="hireDate">Department Name</label>
                                <input class="form-control"  name="departmentId" value="{{employee.departmentId}}"  type="hidden">

                                <input class="form-control" value="{{employee.departmentName}}" id="hireDate" name="departmentName" type="text">
                            </div>
                        </div>
                    </div>
                </fieldset>
                <input type="submit" class="btn btn-primary pull-right" value="Update Department">
            </form>
        </div>
    </div>
</div>